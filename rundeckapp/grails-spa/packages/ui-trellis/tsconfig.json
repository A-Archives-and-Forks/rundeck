{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "types": ["webpack-env", "jest", "node"]
  },
  "paths": {
    "@": ["./src"]
  },
  "include": [
    "main.ts"
    // "./src/library/**/*",
    // "tests/**/*.ts",
    // "tests/**/*.tsx"
  ]
}
