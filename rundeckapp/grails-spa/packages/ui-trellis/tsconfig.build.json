{
  "compilerOptions": {
    "jsx": "preserve",
    "outDir": "lib",
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "esnext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["webpack-env", "src/library/src/types"],
    "types": ["jest"]
  },
  "include": ["./src/library/**/*","**/*.spec.ts", "main.ts"],
  "exclude": [
    "./src/app",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "./src/library/stories/**/*"
  ]
}
